%br
%br
%h1 Hotels#show

.row-fluid
  .span2
    %strong
      Title
  .span10
    = @hotel.title

.row-fluid
  .span2
    %strong
      Country
  .span10
    = @hotel.address.country    if @hotel.address
.row-fluid
  .span2
    %strong
      State
  .span10
    = @hotel.address.state     if @hotel.address
.row-fluid
  .span2
    %strong
      Avatar
  .span10
    = image_tag @hotel.image_url.to_s

%br
%br
.row-fluid
  .span6
    #comment_container
      =render partial: 'comments'

  .span6
    #rating_container
      =render partial: 'ratings'

%br

=link_to 'Back to list', hotels_path()