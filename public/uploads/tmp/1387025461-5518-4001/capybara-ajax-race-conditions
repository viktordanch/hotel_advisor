<div id="answer-11777274" class="answer accepted-answer" data-answerid="11777274" >
    <table>
        <tr>
            <td class="votecell">
                

<div class="vote">
    <input type="hidden" name="_id_" value="11777274">
    <a class="vote-up-off" title="This answer is useful">up vote</a>
